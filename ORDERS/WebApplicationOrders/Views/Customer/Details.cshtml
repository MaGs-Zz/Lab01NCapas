@model Entities.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<h2 class="mt-4">Customer Details</h2>

<hr />

<h4>Customer</h4>

<dl class="row mt-3">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">First Name</dt>
    <dd class="col-sm-10">@Model.FirstName</dd>

    <dt class="col-sm-2">Last Name</dt>
    <dd class="col-sm-10">@Model.LastName</dd>

    <dt class="col-sm-2">City</dt>
    <dd class="col-sm-10">@Model.City</dd>

    <dt class="col-sm-2">Country</dt>
    <dd class="col-sm-10">@Model.Country</dd>

    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.Phone</dd>
</dl>

<div class="mt-3 d-flex justify-content-start">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
        <i class="bi bi-pencil-square"></i> Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Back to List
    </a>
</div>
