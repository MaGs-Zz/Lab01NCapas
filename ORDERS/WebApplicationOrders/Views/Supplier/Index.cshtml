@model List<Entities.Models.Supplier>

@{
    ViewData["Title"] = "Supplier List";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i>&nbsp;Create Supplier
        </a>
    </p>

    @if (Model != null && Model.Any())
    {
        <table id="supplierTable" class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Company Name</th>
                    <th>Contact Name</th>
                    <th>Country</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.CompanyName</td>
                        <td>@item.ContactName</td>
                        <td>@item.Country</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a href="#" class="btn btn-danger btn-sm delete-button" data-id="@item.Id">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No suppliers found.</p>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#supplierTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "language": {
                    "paginate": {
                        "previous": "<i class='bi bi-chevron-left'></i>",
                        "next": "<i class='bi bi-chevron-right'></i>"
                    }
                }
            });

            // Handle delete button clicks
            $('.delete-button').on('click', function (e) {
                e.preventDefault(); // Prevent the default action of the link

                var button = $(this);
                var id = button.data('id');
                var deleteUrl = '@Url.Action("Delete", "Supplier")'; // Adjust the URL if needed

                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: deleteUrl,
                            type: 'POST',
                            data: { id: id },
                            success: function () {
                                Swal.fire(
                                    'Deleted!',
                                    'The supplier has been deleted.',
                                    'success'
                                ).then(() => {
                                    location.reload(); // Reload the page to update the table
                                });
                            },
                            error: function () {
                                Swal.fire(
                                    'Error!',
                                    'There was a problem deleting the supplier.',
                                    'error'
                                );
                            }
                        });
                    }
                });
            });
        });
    </script>
}
