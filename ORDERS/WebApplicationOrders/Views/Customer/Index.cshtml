@model List<Entities.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<h2 class="mt-4">Customer List</h2>

<hr />

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create Customer
    </a>
</p>

<table id="customerTable" class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>City</th>
            <th>Country</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.City</td>
                <td>@item.Country</td>
                <td>@item.Phone</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white me-1">
                        <i class="bi bi-info-circle"></i>
                    </a>
                    <a href="#" class="btn btn-danger btn-sm delete-button" data-id="@item.Id">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#customerTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "language": {
                    "paginate": {
                        "previous": "<i class='bi bi-chevron-left'></i>",
                        "next": "<i class='bi bi-chevron-right'></i>"
                    }
                }
            });

            // Handle delete button clicks
            $('.delete-button').on('click', function (e) {
                e.preventDefault(); // Prevent the default action of the link

                var button = $(this);
                var id = button.data('id');
                var deleteUrl = '@Url.Action("Delete", "Customer")'; // Adjust the URL if needed

                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: deleteUrl,
                            type: 'POST',
                            data: { id: id },
                            success: function () {
                                Swal.fire(
                                    'Deleted!',
                                    'The customer has been deleted.',
                                    'success'
                                ).then(() => {
                                    location.reload(); // Reload the page to update the table
                                });
                            },
                            error: function () {
                                Swal.fire(
                                    'Error!',
                                    'There was a problem deleting the customer.',
                                    'error'
                                );
                            }
                        });
                    }
                });
            });
        });
    </script>
}
